<Window x:Class="PBD_działające__y_.WstawianiePosta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PBD_działające__y_"
        mc:Ignorable="d"
        Title="WstawianiePosta" Height="450" Width="479">
    <Grid Background="#FFFBB3FF">
        <TextBox x:Name="txtOpisPosta" HorizontalAlignment="Left" Height="79" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Background="#FFC4CDFF" BorderBrush="#FF0027FF"/>
        <Image x:Name="imgZdjeciePosta" HorizontalAlignment="Left" Height="300" Margin="10,94,0,0" VerticalAlignment="Top" Width="300"/>
        <Button x:Name="btnDodajZdjecie" Content="Dodaj zdjęcie" HorizontalAlignment="Left" Margin="315,10,0,0" VerticalAlignment="Top" Width="135" Height="48" Click="btnDodajZdjecie_Click" Background="#FF4965FF"  BorderBrush="#FF0027FF" FontSize="20"/>
          
        <Button x:Name="btnDodajPost" Content="Dodaj post" HorizontalAlignment="Left" Margin="328,350,0,0" VerticalAlignment="Top" Width="114" Height="44" Click="btnDodajPost_Click" Background="#FF4965FF"  BorderBrush="#FF0027FF" FontSize="20"/>
       

    </Grid>
</Window>
